#include<stdio.h>
# include<string.h>
void main()
{
   char str[60];
    printf("enter the words");
   gets(str); 
  int   len=strlen(str);
  int count=0;
    for( int i=0;i<len;i++)
       { 
          if(str[i]=" "  &&    str[i+1]!="  ")
         {  count=count+1;
         }
           printf("the no.of words %d",count+1);
    }
  } 
